<Window x:Class="OPGslutuppgift.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPGslutuppgift.Views"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="350" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Register" FontSize="28" HorizontalAlignment="Center" FontWeight="Bold"/>
            
            <Label Content="Username:" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding Username, Mode=TwoWay}" Width="200" Margin="0,0,0,10"/>
            <Label Content="Password:" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding Password, Mode=TwoWay}" Width="200" Margin="0,0,0,10"/>
            <Label Content="Confirm Password:" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding ConfirmPassword, Mode=TwoWay}" Width="200" Margin="0,0,0,10"/>
            <Label Content="Country:" HorizontalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Countries}" SelectedItem="{Binding Country, Mode=TwoWay}" Width="200">
                
            </ComboBox>

            <Button Content="Register" Command="{Binding RegisterCommand}" Width="80" Margin="20"/>
        </StackPanel>
    </Grid>

</Window>
