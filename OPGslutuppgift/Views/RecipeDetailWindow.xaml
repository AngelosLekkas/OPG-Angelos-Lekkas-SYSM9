<Window x:Class="OPGslutuppgift.Views.RecipeDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPGslutuppgift.Views"
        mc:Ignorable="d"
        Title="RecipeDetalWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Recipe details" FontSize="28" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Text="Title:"/>
            <TextBox Text="{Binding SelectedRecipe.Title, Mode=TwoWay}" 
             IsReadOnly="{Binding IsReadOnly}" Margin="0,5"/>

            <TextBlock Text="Category:"/>
            <TextBox Text="{Binding SelectedRecipe.Category, Mode=TwoWay}" 
             IsReadOnly="{Binding IsReadOnly}" Margin="0,5"/>

            <TextBlock Text="Ingredients:"/>
            <TextBox Text="{Binding SelectedRecipe.Ingredients, Mode=TwoWay}" 
             IsReadOnly="{Binding IsReadOnly}" Margin="0,5"/>

            <TextBlock Text="Instructions:"/>
            <TextBox Text="{Binding SelectedRecipe.Instructions, Mode=TwoWay}" 
             IsReadOnly="{Binding IsReadOnly}" Margin="0,5"/>

            <TextBlock Text="Date:"/>
            <TextBox Text="{Binding SelectedRecipe.Date, Mode=TwoWay, StringFormat=d}" 
             IsReadOnly="True" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Edit" Command="{Binding EditCommand}" Width="80" Margin="5" IsEnabled="{Binding IsEditEnabled}"/>
                <Button Content="Save" Command="{Binding SaveCommand}" Width="80" Margin="5"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
