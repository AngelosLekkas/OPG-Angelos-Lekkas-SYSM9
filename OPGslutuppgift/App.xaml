<Application x:Class="OPGslutuppgift.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OPGslutuppgift" 
             xmlns:managers="clr-namespace:OPGslutuppgift.Managers"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- global usermanager-instans tillgänglig för hela applikationen -->
        <managers:UserManager x:Key="UserManager"/>
        <!-- global recipemanager-instans tillgänglig för hela applikationen -->
        <managers:RecipeManager x:Key="RecipeManager"/>
    </Application.Resources>
</Application>
